<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homePage"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        tools:ignore="SpeakableTextPresentCheck">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


    <ScrollView
        android:id="@+id/scrollView2"
        style="@android:style/Widget.DeviceDefault.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="750dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        android:alpha="1"
        android:fadeScrollbars="false"
        android:forceHasOverlappingRendering="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="12dp"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="vertical"
        app:layout_anchor="@+id/nestedScrollView"
        app:layout_anchorGravity="center"
        tools:targetApi="n">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/categoryTxt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="@string/balls"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <HorizontalScrollView
                android:id="@+id/Horizontal1"
                android:layout_width="409dp"
                android:layout_height="190dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/categoryTxt1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/adidasrihla"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:minHeight="48dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/adidasrihla"
                        tools:ignore="SpeakableTextPresentCheck,DuplicateClickableBoundsCheck,DuplicateClickableBoundsCheck"
                        android:contentDescription="TODO" />
                    <ImageButton
                        android:id="@+id/alhilum"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:minHeight="48dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/alhilum"
                        tools:ignore="SpeakableTextPresentCheck" />
                    <ImageButton
                        android:id="@+id/ball"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:minHeight="48dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ball"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/ball1"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toEndOf="@+id/ball"
                        app:layout_constraintTop_toTopOf="@+id/ball"
                        app:srcCompat="@drawable/ball1"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:contentDescription="TODO" />

                    <ImageButton
                        android:id="@+id/ball2"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toEndOf="@+id/ball1"
                        app:layout_constraintTop_toTopOf="@+id/ball1"
                        app:srcCompat="@drawable/ball2"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/ball3"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toEndOf="@+id/ball2"
                        app:layout_constraintTop_toTopOf="@+id/ball2"
                        app:srcCompat="@drawable/ball3"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/ball4"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toEndOf="@+id/ball3"
                        app:layout_constraintTop_toTopOf="@+id/ball3"
                        app:srcCompat="@drawable/ball4"
                        tools:ignore="SpeakableTextPresentCheck"
                        android:contentDescription="TODO" />



                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/categoryTxt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Shoes"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/categoryTxt1"
                app:layout_constraintTop_toBottomOf="@id/Horizontal1" />

            <HorizontalScrollView
                android:id="@+id/Horizontal2"
                android:layout_width="409dp"
                android:layout_height="190dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/categoryTxt2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fadeScrollbars="true">

                    <ImageButton
                        android:id="@+id/shoes"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:minHeight="48dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/shoes"
                        tools:ignore="SpeakableTextPresentCheck,DuplicateClickableBoundsCheck" />


                    <ImageButton
                        android:id="@+id/shoes1"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toEndOf="@+id/shoes"
                        app:layout_constraintTop_toTopOf="@+id/shoes"
                        app:srcCompat="@drawable/shoes1"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/shoes2"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toEndOf="@+id/shoes1"
                        app:layout_constraintTop_toTopOf="@+id/shoes1"
                        app:srcCompat="@drawable/shoes2"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/shoes3"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toEndOf="@+id/shoes2"
                        app:layout_constraintTop_toTopOf="@+id/shoes2"
                        app:srcCompat="@drawable/shoes3"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/shoes4"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:minHeight="48dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/shoes4"
                        tools:ignore="SpeakableTextPresentCheck" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/categoryTxt3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/jesrsyes"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/categoryTxt2"
                app:layout_constraintTop_toBottomOf="@id/Horizontal2" />

            <HorizontalScrollView
                android:id="@+id/Horizontal3"
                android:layout_width="409dp"
                android:layout_height="190dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/categoryTxt3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/morocco"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:minHeight="48dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/morocco"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/morocco1"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toEndOf="@+id/morocco"
                        app:layout_constraintTop_toTopOf="@+id/morocco"
                        app:srcCompat="@drawable/morocco1"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/cr7"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toEndOf="@+id/morocco1"
                        app:layout_constraintTop_toTopOf="@+id/morocco1"
                        app:srcCompat="@drawable/cr7"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/croatia"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toEndOf="@+id/cr7"
                        app:layout_constraintTop_toTopOf="@+id/cr7"
                        app:srcCompat="@drawable/croatia"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/qatar"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toEndOf="@+id/croatia"
                        app:layout_constraintTop_toTopOf="@+id/croatia"
                        app:srcCompat="@drawable/qatar"
                        tools:ignore="SpeakableTextPresentCheck" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/categoryTxt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Hats"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/categoryTxt3"
                app:layout_constraintTop_toBottomOf="@id/Horizontal3" />

            <HorizontalScrollView
                android:id="@+id/Horizontal4"
                android:layout_width="409dp"
                android:layout_height="190dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/categoryTxt4">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/qatarhat"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/qatarhat"
                        android:minHeight="48dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/germanyhat"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toEndOf="@+id/qatarhat"
                        app:layout_constraintTop_toTopOf="@+id/qatarhat"
                        app:srcCompat="@drawable/germanyhat"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/arghat"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toEndOf="@+id/germanyhat"
                        app:layout_constraintTop_toTopOf="@+id/germanyhat"
                        app:srcCompat="@drawable/arghat"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/spainhatjpeg"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toEndOf="@+id/arghat"
                        app:layout_constraintTop_toTopOf="@+id/arghat"
                        app:srcCompat="@drawable/spainhatjpeg"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <ImageButton
                        android:id="@+id/belgiumhat"
                        android:layout_width="200sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:onClick="onClick"
                        android:scaleType="fitXY"
                        app:layout_constraintStart_toEndOf="@+id/spainhatjpeg"
                        app:layout_constraintTop_toTopOf="@+id/spainhatjpeg"
                        app:srcCompat="@drawable/belgiumhat"
                        tools:ignore="SpeakableTextPresentCheck" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/name_TXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="133dp"
                android:layout_marginBottom="8dp"

                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/Horizontal1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/categoryTxt1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4" />

            <TextView
                android:id="@+id/ViewCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="213dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="33dp"
                android:layout_marginBottom="8dp"
                android:text="Cart"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/Horizontal1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/categoryTxt1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>